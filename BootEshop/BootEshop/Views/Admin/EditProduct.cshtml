@model BootEshop.ViewModels.EditProductViewModel
@using System.Text.Json
@using Mysqlx.Resultset

@{
    ViewData["Title"] = "Upravit produkt";
}

@section Scripts
{
    <script src="~/js/admin/product.js"></script>
}
@section Styles
{
    <link rel="stylesheet" href="~/css/admin/product.css"/>
}

<h2 class="mb-4">Upravit produkt</h2>

<form asp-action="EditProduct"
      method="post"
      enctype="multipart/form-data"
      class="row g-3">

    <input type="hidden" asp-for="Id" />

    <!-- Basic info -->
    <div class="col-md-6">
        <label asp-for="Name" class="form-label">N√°zev</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="col-md-6">
        <label asp-for="StockPrice" class="form-label">N√°kupn√≠ cena</label>
        <input asp-for="StockPrice" class="form-control" />
    </div>
    <div class="col-md-6">
        <label asp-for="Price" class="form-label">Prodejn√≠ cena</label>
        <input asp-for="Price" class="form-control" />
    </div>
    <div class="col-md-6">
        <label asp-for="SalePrice" class="form-label">Akƒçn√≠ cena</label>
        <input asp-for="SalePrice" class="form-control" />
    </div>

    <div class="col-12">
        <label asp-for="ShortDescription" class="form-label">Kr√°tk√Ω popis</label>
        <input asp-for="ShortDescription" class="form-control" />
    </div>

    <div class="col-12">
        <label asp-for="LongDescription" class="form-label">Dlouh√Ω popis</label>
        <textarea asp-for="LongDescription" class="form-control" rows="4"></textarea>
    </div>

    <hr class="my-4" />

    <!-- Category / Manufacturer -->
    <div class="col-md-6">
        <label asp-for="CategoryId" class="form-label">Kategorie</label>
        <select asp-for="CategoryId" asp-items="Model.Categories" class="form-select"></select>
    </div>

    <div class="col-md-6">
        <label asp-for="ManufacturerId" class="form-label">V√Ωrobce</label>
        <select asp-for="ManufacturerId" asp-items="Model.Manufacturers" class="form-select"></select>
    </div>
    
    

    <!-- Images -->
    <div class="col-12">
        <label class="form-label">Obr√°zky produktu</label>
        <input type="file"
               id="imageInput"
               name="Images"
               class="form-control"
               multiple
               accept="image/*" />

        <div class="form-text">
            Prvn√≠ obr√°zek je hlavn√≠. P≈ôet√°hnut√≠m zmƒõn√≠te po≈ôad√≠.
        </div>

        <div id="imageList" class="row mt-3 g-3"
             data-existing='@Html.Raw(JsonSerializer.Serialize(Model.ExistingImages))'>
        </div>
        <div id="imageOrderInputs"></div>
        <!-- Hidden inputs for existing images -->
        <div id="existingImagesInputs"></div>
    </div>
    
    
    <table class="table">
        <thead>
        <tr>
            <th>Color</th>
            <th>Size</th>
            <th>Qty</th>
            <th>Delete</th>
        </tr>
        </thead>
        <tbody>
        @for (int i = 0; i < Model.Rows.Count; i++)
        {
            <tr>
                <input type="hidden" asp-for="Model.Rows[@i].Id" />

                <td>
                    <select asp-for="Model.Rows[@i].ProductColorId"
                            asp-items="Model.Colors"
                            class="form-select">
                    </select>
                </td>

                <td>
                    <select asp-for="Model.Rows[@i].ProductSizeId"
                            asp-items="Model.Sizes"
                            class="form-select">
                    </select>
                </td>

                <td>
                    <input asp-for="Model.Rows[@i].Quantity"
                           type="number"
                           min="0"
                           class="form-control" />
                </td>

                <td class="text-center">
                    <input asp-for="Model.Rows[@i].Delete" />
                </td>
            </tr>
        }
        </tbody>
    </table>

    <button type="submit" name="intent" value="add" class="btn btn-secondary">
        ‚ûï Add row
    </button>

    <button type="submit" name="intent" value="save" class="btn btn-primary">
        üíæ Save
    </button>

    <div class="col-12 mt-4">
        <button type="submit" class="btn btn-primary">Ulo≈æit produkt</button>
        <a asp-action="ProductOverview" class="btn btn-outline-secondary ms-2">Zru≈°it</a>
    </div>
</form>
